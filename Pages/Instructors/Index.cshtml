@page
@model InstructorsIndexModel
@{
    ViewData["Title"] = "Instructors";
}

<h1>Instructors</h1>

<table class="table">
    <thead>
        <tr>
            <th>InstructorId</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Course</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var instructor in Model.Instructor)
        {
            <tr>
                <td>@instructor.InstructorId</td>
                <td>@instructor.FirstName</td>
                <td>@instructor.LastName</td>
                <td>@instructor.Email</td>
                <td>@instructor.Course.CourseName</td>
            </tr>
        }
    </tbody>
</table>
